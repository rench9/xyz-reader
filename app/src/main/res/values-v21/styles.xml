<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorPrimary">@color/dark_shade_2</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/shade_4</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="AppTheme.Dark" parent="AppTheme">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:statusBarColor">@color/dark_shade_2</item>
        <item name="android:navigationBarColor">@color/dark_shade_2</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>
</resources>